{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": [
      "es2019",
      "es2018",
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ],
    "jsx": "preserve",
    "outDir": "dist/",
    "noImplicitAny": true,
    "allowJs": false,
    "removeComments": true,
    "target": "es6",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src"
  ],
  "rules": {
    "no-console": false,
    "interface-name": [
      true,
      "never"
    ]
  }
}